<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
        </span>
      </li>
       <li>
       <%=link_to('Add friend', user_friendships_path(friend_id: user.id, user_id: current_user ), method: :post)%>
      </li>
    <% end %>
  </ul>
</section>
